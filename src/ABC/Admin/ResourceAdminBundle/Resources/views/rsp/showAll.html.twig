{# empty Twig template #}
<html>

    <head>
      
  <style>

      div.list{
    
        padding: 19px 25px 0px 20px;
        font-size: 10px;
        margin: 0 auto 10px;
        display: block;
        background-color: #66ccff;
        padding: 3px 5px 3px 10px;
        max-width: 350px;
        border-radius: 5%;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
       }
      
      a{
          color: #000000;
          text-decoration: none;
      } 
      
      .linespace{
          margin-left: 10px;
          margin-right: 10px;
          color: #000000;
          font-weight: 900;
      }
      
      input[type="submit"]{
        background-color:  #004099;  
        font-size: 12px;
        color: white;
        height: 25px;
        margin-top: -33px;
        padding: 5px 5px;
        float: right;
        border-radius: 15%;
        border-color: #0074cc;
      }
  
               
  </style>        
        
    </head>

    <body>
        <div style="float:left;margin:auto auto 50px 50px;border:2px solid; border-color:#000000;border-radius:10%;width:300px ">
            <ul>
                <li><a href="{{path('rsp_new')}}">Add Resource Person</a></li> 
                
            </ul>    
        </div>
        {%for entity in entities%}
           <div class="list">
             <p> 
             <strong>RPID</strong> : {{entity.rpid}}<br>
             <strong>Name</strong> :{{entity.firstname}} {{entity.lastname}}<br>
             <strong>Email</strong> :{{entity.email}}<br>
             <strong>Department</strong> :{{entity.deptName}}<br>
             <strong> Courses</strong>: 
             
             
             </p>
             
             <a href="{{ path('rsp_show', { 'id': entity.rpid }) }}">show</a><span class="linespace">|</span>
             <a href="{{ path('rsp_edit', { 'id': entity.rpid }) }}">edit</a>
             <form action="{{path('rsp_show',{ 'id':entity.rpid })}}" method="POST" style="">
                    <input type="submit" value="View Profile" class="bt btn-primary btn-success">
             </form>
           </div>
        {% endfor%}
                
    </body>

</html>
