{# empty Twig template #}
<html>

    <head>
      
  <style>
      div.list{
    
        padding: 19px 25px 0px 20px;
        font-size: 10px;
        margin: 0 auto 10px;
        display: block;
        background-color: #66ccff;
        padding: 3px 5px 3px 10px;
        max-width: 350px;
        border-radius: 5%;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
       }
      
      a{
          color:  #cccccc;
          text-decoration: none;
      } 
      
      .linespace{
          margin-left: 10px;
          margin-right: 10px;
          color: #000000;
          font-weight: 900;
      }
      
      input[type="submit"]{
        background-color:  #004099;  
        font-size: 12px;
        color: white;
        height: 25px;
        margin-top: -33px;
        padding: 5px 5px;
        float: right;
        border-radius: 15%;
        border-color: #0074cc;
      }
      
  </style>        
        
    </head>

    <body style="margin-top:100px">
        <div style="float:left;margin:auto auto 50px 50px;border:2px solid; border-color:#000000;border-radius:10%;width:300px ">
            <ul>
                <li><a href="{{path('session_new')}}">Add Session</a></li> 
            </ul>    
        </div>
            
         <div style="float:right;margin:auto 50px 50px auto;border:2px solid; border-color: #0e90d2;border-radius:10%;width:auto">
                Total Sessions Assigned : {{ total }}
         </div>    
        {%for entity in entities%}
           <div class="list">
             <p style="font-size:12px"> 
                 <strong>{{entity.sessionId}} </strong>  <span class="linespace">|</span> 
             <strong> Year: {{entity.year}} </strong>  <br>
             <strong> Timeslot: {{entity.timeslot.detail}}</strong><br>
             <strong> Course: {{entity.course}}({{entity.course.title}})</strong><br>
              <strong>Classroom: {{entity.class.detail}}</strong>
            
             <br>
              </p>
             

           <form action="{{path('session_delete',{ 'id':entity.sessionId })}}" method="POST" style="">
                    <input name="sessionId" type="hidden" value="{{entity.sessionId}}"> 
                    <input name="year" type="hidden" value="{{entity.year}}"> 
                    <input name="startmonth" type="hidden" value="{{entity.startMonth}}"> 
                    <input name="classId" type="hidden" value="{{entity.class}}"> 
                    <input name="timeslot" type="hidden" value="{{entity.timeslot}}">
                    <input name="course" type="hidden" value="{{entity.course}}"> 
                    <input type="submit" value="Delete" class="deleteButton">
             </form>
            
           </div>
        {% endfor%}
                
    </body>

</html>
