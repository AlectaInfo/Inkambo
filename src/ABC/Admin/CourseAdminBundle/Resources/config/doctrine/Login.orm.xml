<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ABC\Admin\CourseAdminBundle\Entity\Login" table="login">
    <id name="username" type="string" column="username" length="30">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="password" type="string" column="password" length="60" nullable="false"/>
    <field name="salt" type="string" column="salt" length="60" nullable="false"/>
    <field name="type" type="string" column="type" length="20" nullable="true"/>
  </entity>
</doctrine-mapping>
