<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ABC\Admin\CourseAdminBundle\Entity\Timeslot" table="timeslot">
    <unique-constraints>
      <unique-constraint name="day" columns="day,start,finish"/>
    </unique-constraints>
    <id name="timeslotId" type="string" column="timeslot_id" length="3">
    </id>
    <field name="day" type="string" column="day" length="8" nullable="true"/>
    <field name="start" type="time" column="start" nullable="true"/>
    <field name="finish" type="time" column="finish" nullable="true"/>
  </entity>
</doctrine-mapping>
